<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Cloudycam" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here -->
        <item name="colorPrimary">#373737</item>
    </style>

    <!-- Custom AlertDialog Theme -->
    <style name="CustomAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <!-- Background color for dialog -->
        <item name="android:background">@color/cardview_dark_background</item>
        <!-- Corner radius for dialog -->
        <item name="android:dialogCornerRadius">16dp</item>
        <!-- Text colors -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <!-- Enable selectable text in dialogs -->
    </style>

    <!-- Theme applied to the entire application -->
    <style name="Theme.Cloudycam" parent="Base.Theme.Cloudycam" />

    <!-- Custom style for AlertDialog with list items -->
    <style name="CustomAlertDialogList" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="android:background">@color/cardview_dark_background</item>
        <item name="android:dialogCornerRadius">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:padding">0dp</item>

    </style>
</resources>
